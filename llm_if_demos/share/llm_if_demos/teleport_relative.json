{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "service": {
            "type": "string",
            "default": "/$TURTLE_NAME/teleport_relative"
        },
        "args": {
            "type": "object",
            "properties": {
                "linear": {
                    "type": "number"
                },
                "angular": {
                    "type": "number"
                }
            },
            "required": [
                "linear",
                "angular"
            ]
        }
    },
    "required": [
        "service",
        "args"
    ]
}